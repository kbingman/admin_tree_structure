    <tr id="page-<%= page.id %>" class="node level-<%= level %><%= children_class %><%= virtual_class %>">
      <% render_region :node, :locals => {:page => page, :level => level, :simple => simple} do |node| %>
        <% node.title_column do %>
        <td class="page" style="padding-left: <%= padding_left(level) %>px">
          <span class="w1">
          <% if simple -%>
            <%= icon %>
            <%= node_title %>
          <% elsif Page === page -%>
            <%= expander %><a href="<%= page_edit_url(:id => page) %>" title="<%= page.url %>"><%= icon %> <%= node_title %></a> 
            <%= page_type %>
            <%= spinner %>
          <% else -%>
            <%= expander %><%= icon %> <%= node_title %>
            <%= page_type %>
            <%= spinner %>
          <% end -%>
          </span>
        </td>
        <% end %>
        <% node.status_column do %>
          <% unless simple || !(Page === page)-%><td class="status <%= page.status.name.downcase %>-status"><%= page.status.name %></td><% end %>
        <% end %>
        <% node.add_child_column do %>
          <% unless simple || !(Page === page) -%><td class="add-child"><%= link_to image('add-child', :alt => 'add child'), page_new_url(:parent_id => page) %></td><% end %>
        <% end %>
        <% node.remove_column do %>
          <% unless simple || !(Page === page) %><td class="remove"><%= link_to image('remove', :alt => 'remove page'), page_remove_url(:id => page) %></td><% end %>
        <% end %>
      <% end %>
    </tr>
<%
if expanded
  children.each do |child|
-%>
<%= render_node child, :level => level + 1, :simple => simple -%>
<%
  end
end
-%>
